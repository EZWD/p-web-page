---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

// import images
import hfes25 from '../assets/img/hfes25.png';
import CHI26AR from '../assets/img/CHI26AR.jpg';
import Survey from '../assets/img/Survey.jpg';
import MoiréTag from '../assets/img/MoiréTag.png';
import Fringer from '../assets/img/Fringer.png';
import ModernPathology from '../assets/img/ModernPathology.png';
import VisualSearchTVCG from '../assets/img/VisualSearchTVCG.png';



const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Greetings! 👋</div>
    <div class="text-5xl font-bold">I'm Peiyu Zhang</div>
    <div class="text-3xl py-3 font-bold">HCI Researcher and Software Engineer</div>
    <div class="py-2">
      <text class="text-lg">
        Todo
      </text>
    </div>
    <!-- <div class="mt-8">
      <a class="btn" href="https://twitter.com/manuelernestog" target="_blank"> Let's connect!</a>
      <a href="https://github.com/manuelernestog/astrofy" target="_blank" class="btn btn-outline ml-5">
        Get This template
      </a>
    </div> -->
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My Research</div>
  </div>

  <HorizontalCard
    title="Combining Real and Virtual Displays: Effects of Spatial Layout and Task Load on Multitasking in Augmented Reality"
    img={CHI26AR}
    desc={`<span class="text-black">Peiyu Zhang</span>, <span class="text-gray-400">Mohamad El Iskandarani</span>, <span class="text-gray-400">Sara Riggs</span><br/> User study examining how AR display layouts, context switching, and task load affect multitasking performance and perceived workload.`}
    url="#"
    badge="In submission to CHI 26"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="The Effect of Layout on Visual Search in Augmented Reality Multi-Window Displays"
    img={VisualSearchTVCG}
    desc={`<span class="text-black">Peiyu Zhang</span>, <span class="text-gray-400">Mohamad El Iskandarani</span>, <span class="text-gray-400">Sara Riggs</span><br/> User study examining how the spatial placement of multi-display AR, in relation to depth separation, information density, and the curvature of virtual multi-window displays, affects visual search performance.`}
    url="#"
    badge="In submission to IEEE TVCG"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Deep learning-assisted system improves practical effect in cervical cytopathology diagnosis: A comparative study of reading modes"
    img={ModernPathology}
    desc={`<span class="text-gray-400">Zichen Ye</span>, 
    <span class="text-black">Peiyu Zhang</span>, 
    <span class="text-gray-400">Ronggan Wei</span>, 
    <span class="text-gray-400">Haiyan Niu</span>, 
    <span class="text-gray-400">Hongxia Li</span>, 
    <span class="text-gray-400">Mingjuan Wang</span>, 
    <span class="text-gray-400">Sara Lu Riggs</span>, 
    and <span class="text-gray-400">Peng Xue</span><br/>`}
    url="#"
    badge="Accepted to Modern Pathology"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Multitasking Between Realities: An Examination of Multitasking Using Augmented Reality Under Different Task Demand Levels"
    img={hfes25}
    desc={`<span class="text-black">Peiyu Zhang</span> and <span class="text-gray-400">Sara Riggs</span><br/>User study investigating how augmented reality through OST-HMDs impacts multitasking performance and perceived workload across different levels of task demand.`}
    url="https://journals.sagepub.com/doi/abs/10.1177/10711813251357901"
    badge="HFES Annual Meeting (ASPIRE) 2025"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="MoiréTag: A Low-Cost Tag for High-Precision Tangible Interactions without Active Components"
    img={MoiréTag}
    desc={`<span class="text-black">Peiyu Zhang</span>, <span class="text-gray-400">Wen Ying</span>, <span class="text-gray-400">Sara Riggs</span>, and <span class="text-gray-400">Seongkook Heo</span><br/> A computer-vision based touch force sensing method that supports the creation of tangible interfaces.`}
    url="https://dl.acm.org/doi/pdf/10.1145/3698113"
    badge="🏆 ACM ISS 2024 (Honorbale Mention Award)"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Chinese colposcopists' attitudes toward the colposcopic artificial intelligence auxiliary diagnostic system (CAIADS): A nation-wide, multi-center survey"
    img={Survey}
    desc={`<span class="text-gray-400">Huike Wang*</span>, 
      <span class="text-gray-400">Zichen Ye*</span>, 
      <span class="text-black">Peiyu Zhang*</span>, 
      <span class="text-gray-400">Xiaoli Cui</span>, 
      <span class="text-gray-400">Mingyang Chen</span>, 
      <span class="text-gray-400">Aiyuan Wu</span>, 
      <span class="text-gray-400">Sara Lu Riggs</span>, 
      <span class="text-gray-400">Peng Xue</span>, 
      and <span class="text-gray-400">Youlin Qiao</span><br/>
    A nation-wide questionnaire that collected clinicians&#39; sociodemographic information and assess their awareness, attitudes, and acceptance toward AI-assisted diagnostic system.`}
    url="https://journals.sagepub.com/doi/full/10.1177/20552076241279952"
    badge="Sage Digital Health"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Fringer: A finger-worn passive device enabling computer vision based force sensing using moiré fringes"
    img={Fringer}
    desc={`<span class="text-black">Peiyu Zhang</span>, <span class="text-gray-400">Wen Ying</span>, <span class="text-gray-400">Sara Riggs</span>, and <span class="text-gray-400">Seongkook Heo</span><br/> A finger sleeve that physically visualizes the force to allow a camera to estimate the force without using any active sensors.`}
    url="https://dl.acm.org/doi/abs/10.1145/3526114.3558706"
    badge="UIST 2022 Poster"
  />

